{
  ":separateMajorReleases": true,
  ":combinePatchMinorReleases": true,
  "rebaseWhen": "auto",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ],
  "platformAutomerge": true,
  "automergeType": "branch"
}
